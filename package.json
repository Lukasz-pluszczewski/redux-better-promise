{
  "name": "redux-better-promise",
  "version": "0.1.0",
  "description": "Simple and powerful redux middleware that supports async side-effects (and much more)",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lukasz-pluszczewski/redux-better-promise"
  },
  "main": "lib/library-boilerplate.js",
  "module": "lib/library-boilerplate.mjs",
  "jsnext:main": "lib/library-boilerplate.mjs",
  "scripts": {
    "prepublish": "NODE_PATH=src npm run build",
    "prebuild": "rimraf ./lib",
    "build": "NODE_PATH=src rollup -c",
    "watch": "NODE_PATH=src rollup -c -w",
    "lint": "esw rollup.config.js src --color",
    "test": "npm run mochatest --silent",
    "test:watch": "npm run mochatest -- --watch",
    "mochatest": "NODE_PATH=src mocha tools/testSetup.js \"./test/**/*.js\""
  },
  "keywords": [
    "redux",
    "promise",
    "middleware",
    "async",
    "hooks"
  ],
  "author": "≈Åukasz Pluszczewski",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "babelrc-rollup": "^3.0.0",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^3.16.0",
    "eslint-config-brainhub": "^1.0.1",
    "eslint-watch": "^3.0.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "sinon": "^2.3.8",
    "sinon-chai": "^2.12.0"
  },
  "dependencies": {
    "debug": "^2.6.1",
    "lodash": "^4.17.4"
  }
}
